{
  "compilerOptions": {
    "target": "ES2020",                                                            
    "moduleResolution": "node",                          
    "inlineSourceMap": true,                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "module": "CommonJS",
    "outDir": "./out"
  },
  "exclude": [
    "node_modules"
],
}
